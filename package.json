{
  "name": "fremen-logo-showcase",
  "version": "1.0.0",
  "description": "Logo Showcase for Mencke Verzekeringen",
  "author": "Freek Mencke",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FreekMencke/fremen-logo-showcase"
  },
  "scripts": {
    "start:gutenberg": "wp-scripts start",
    "start:slider": "webpack --mode development --entry ./src/slider.js --output ./build/slider.js --watch",
    "prebuild": "rm -rf build/",
    "build": "npm run build:gutenberg && npm run build:slider",
    "build:gutenberg": "wp-scripts build",
    "postbuild:gutenberg": "cp ./src/custom.css ./build/custom.css",
    "build:slider": "webpack --mode production --entry ./src/slider.js --output ./build/slider.js",
    "postbuild:slider": "cp ./node_modules/tiny-slider/dist/tiny-slider.css ./build/tiny-slider.css"
  },
  "dependencies": {
    "tiny-slider": "^2.9.2"
  },
  "devDependencies": {
    "@wordpress/scripts": "9.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}